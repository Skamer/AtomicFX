  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Debug to Node in Remote",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "timeout": 600000,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "outFiles": ["${workspaceFolder}/build/**.js"],
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "sourceMaps": true
    }
  ]
}
